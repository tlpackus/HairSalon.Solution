@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

  <h1>This is the list of all current Clients:</h1> 

  @if (@Model.Count == 0) {
    <h2>no clients have been added yet</h2>
  }

  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", new {id = client.ClientId })</li>
    }
  </ul>

  <p>@Html.ActionLink("add a new client", "Create")</p>

  <p>@Html.ActionLink("back to home", "Index", "Home")</p> 